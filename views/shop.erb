  <h3>This is list <a href="/v/<%= @current_url%>"><%= @current_url %></a>.</h3>
  <form method="post" action="/send">
	<input type="hidden" name="src" value="<%= @current_url %>">
	<div class="row"><div class="span6"> &#x260e; <input type="text" name="tel" value="<%= @tel || "" %>"></div>
		<div class="span6"> <input type="submit" class="btn btn-large btn-block btn-primary" value="Send list to this mobile"></div>
	</div>
  </form>
  <% @items.each_with_index do |item, index| %>
  <div class="row">
    <div class="span12">
      <div class="toggle toggle-icon">
	     <label class="toggle-radio fui-checkmark-16" for="item<%= index %>"></label>
	     <input type="radio" name="item<%= index %>" id="item<%= index %>" value="off">
	     <label class="toggle-radio fui-cross-16" for="item<%= index %>"></label>
      </div> <%= item %>
    </div>
  </div>
  <% end %>
